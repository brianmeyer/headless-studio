# ============================================================================
# HEADLESS STUDIO - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================================================
# SUPABASE (Required - Phase 0)
# ============================================================================
SUPABASE_URL=https://***REMOVED***
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# Database password (only needed for direct PostgreSQL connections)
# SUPABASE_DB_PASSWORD=your_db_password_here

# ============================================================================
# LLM APIs (Required - Phase 0)
# ============================================================================

# Groq (FREE - used for: Discovery, Drafting, QA)
# Get key: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Google AI Studio (FREE - used for: Gemini, Imagen 3)
# Get key: https://aistudio.google.com
GOOGLE_AI_API_KEY=your_google_ai_key_here

# ============================================================================
# REDDIT (Required - Phase 0)
# ============================================================================
# Create app at: https://www.reddit.com/prefs/apps
# Choose "script" type

REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=headless-studio-discovery/1.0

# ============================================================================
# GUMROAD (Required - Phase 1)
# ============================================================================
# Get access token: https://app.gumroad.com/settings/advanced
GUMROAD_ACCESS_TOKEN=your_gumroad_token_here

# ============================================================================
# PINTEREST (Optional - Phase 0+, Apply Early!)
# ============================================================================
# Apply for API access: https://developers.pinterest.com
# Approval takes 3-7 days
PINTEREST_APP_ID=your_app_id_here
PINTEREST_APP_SECRET=your_app_secret_here
PINTEREST_ACCESS_TOKEN=your_pinterest_token_here

# ============================================================================
# X/TWITTER via XAI GROK (Optional - Phase 1+)
# ============================================================================
# Get API key: https://console.x.ai
# Used for X/Twitter content discovery
XAI_API_KEY=your_xai_api_key_here

# ============================================================================
# REDDIT ADS (Phase 1+)
# ============================================================================
# Create ads account: https://ads.reddit.com
# Then get API credentials
REDDIT_ADS_CLIENT_ID=your_reddit_ads_client_id
REDDIT_ADS_CLIENT_SECRET=your_reddit_ads_client_secret
REDDIT_ADS_REFRESH_TOKEN=your_refresh_token_here

# ============================================================================
# GOOGLE ADS (Phase 2 - Option A)
# ============================================================================
# Complex setup - see: https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_CLIENT_ID=your_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CUSTOMER_ID=your_customer_id_here

# ============================================================================
# META ADS (Phase 2 - Option B)
# ============================================================================
# Get started: https://developers.facebook.com/docs/marketing-apis
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_ACCESS_TOKEN=your_meta_access_token_here
META_AD_ACCOUNT_ID=your_ad_account_id_here

# ============================================================================
# MAILERLITE (Phase 1+)
# ============================================================================
# Sign up: https://www.mailerlite.com
# Get API key from dashboard
MAILERLITE_API_KEY=your_mailerlite_key_here

# ============================================================================
# SEO / KEYWORDS (Optional)
# ============================================================================
# DataForSEO API (paid, more accurate keyword data)
# https://dataforseo.com
DATAFORSEO_LOGIN=your_login_here
DATAFORSEO_PASSWORD=your_password_here

# ============================================================================
# N8N WEBHOOKS (Set after n8n deployment)
# ============================================================================
# These are webhook URLs from your n8n workflows
N8N_WEBHOOK_GATE1=https://your-n8n-instance/webhook/gate1
N8N_WEBHOOK_MANUFACTURING=https://your-n8n-instance/webhook/manufacturing
N8N_WEBHOOK_GATE2=https://your-n8n-instance/webhook/gate2

# ============================================================================
# NOTIFICATIONS (Optional)
# ============================================================================
# Slack webhook for alerts/notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord webhook (alternative to Slack)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# ============================================================================
# PHASE CONFIGURATION
# ============================================================================
# Current phase (0, 1, 2, 3) - determines which features are enabled
CURRENT_PHASE=0

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable specific features
ENABLE_ORGANIC_VALIDATION=true
ENABLE_PAID_VALIDATION=false
ENABLE_PINTEREST_AUTO=false
ENABLE_SEO_CLUSTERING=false

# ============================================================================
# RATE LIMITING & SAFETY
# ============================================================================
# Maximum concurrent LLM requests
MAX_CONCURRENT_LLM_REQUESTS=5

# Maximum opportunities to surface per discovery run
MAX_OPPORTUNITIES_PER_RUN=10

# Duplicate check lookback period (days)
DUPLICATE_LOOKBACK_DAYS=90
